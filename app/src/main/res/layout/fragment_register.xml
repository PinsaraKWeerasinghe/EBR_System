<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register"
    android:background="#B2F7FD48">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20pt"
            >


            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="15dp"
                android:text="Create an Account"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp"
                android:ems="10"
                android:hint="*Unique Username"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginTop="23dp"
                android:ems="10"
                android:hint="*First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstName"
                android:layout_marginTop="-10dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/accNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastName"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:hint="*CEB Account Number"
                android:inputType="number" />


            <EditText
                android:id="@+id/mobNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accNo"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="number" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobNo"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:hint="E-mail Address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/pword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="*Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/conPword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pword"
                android:layout_marginTop="-11dp"
                android:ems="10"
                android:hint="*Re-enter Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conPword"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="No."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/No"
                android:layout_marginTop="-11dp"
                android:ems="10"
                android:hint="Street"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/street"
                android:layout_marginTop="-9dp"
                android:ems="10"
                android:hint="City"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/zipno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:layout_marginTop="-10dp"
                android:ems="10"
                android:hint="Zip-Number"
                android:inputType="number" />


            <android.support.v7.widget.CardView

                android:layout_alignParentEnd="true"
                android:id="@+id/btnReg"
                android:layout_width="110dp"
                android:layout_marginRight="20pt"
                android:layout_height="50dp"
                android:layout_below="@+id/zipno"
                android:paddingBottom="20pt"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textVie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Register"
                        android:textColor="#fff" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/btncancel"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_below="@+id/zipno"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cancel"
                        android:textColor="#fff" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"

                android:layout_marginTop="68dp"
                android:layout_marginEnd="269dp"
                android:text="Username"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViscc"
                android:layout_width="103dp"
                android:layout_height="20dp"
                android:layout_above="@+id/userName"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="288dp"
                android:layout_marginBottom="-5dp"
                android:text="Username"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="137dp"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="237dp"
                android:text="CEB Account Number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="303dp"
                android:text="Mobile Number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="369dp"
                android:text="Email Address"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="434dp"
                android:text="Password"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="532dp"
                android:text="Address"
                android:textStyle="bold" />

        </RelativeLayout>


    </ScrollView>


</FrameLayout>