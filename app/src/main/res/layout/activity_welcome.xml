<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome"
    android:background="#F7FD48"
    >

    <LinearLayout
        android:id="@+id/mainlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView

            android:layout_width="163dp"
            android:layout_height="197dp"
            android:src="@drawable/sparklogo" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/txtSpark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Spark"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ceblogo"
        android:layout_width="79dp"
        android:layout_height="96dp"
        android:layout_below="@+id/mainlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:src="@drawable/ceblogo" />

    <TextView
        android:id="@+id/txtceb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ceblogo"
        android:layout_marginTop="-7dp"
        android:text="Powered by Ceylon Electricity Board"

        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="normal" />

</RelativeLayout>