<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SubmitReport"
    android:background="#B2F7FD48">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/location"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Location"
                    android:textColor="@color/cardview_dark_background" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--<FrameLayout-->
            <!--android:id="@+id/maplay"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp">-->

            <!--<com.google.android.gms.maps.MapView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:id="@+id/map">-->

            <!--</com.google.android.gms.maps.MapView>-->

        <!--</FrameLayout>-->


        <Spinner

            android:layout_centerHorizontal="true"
            android:id="@+id/incidentMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginTop="34dp"
            android:spinnerMode="dropdown"

            />

        <EditText
            android:id="@+id/cmnt"

            android:layout_width="295dp"
            android:layout_height="87dp"
            android:layout_below="@+id/incidentMe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Add Comment here..."
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmnt"
            android:layout_marginTop="11dp"
            android:text="Upload Images"
            android:layout_centerHorizontal="true"/>

        <HorizontalScrollView
            android:id="@+id/scrollpad"
            android:layout_width="296dp"
            android:layout_height="89dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:id="@+id/submitR"
            android:layout_height="50dp"
            android:layout_below="@+id/scrollpad"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#f00"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:text="Submit Your Report"
                    android:textColor="#000" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</FrameLayout>